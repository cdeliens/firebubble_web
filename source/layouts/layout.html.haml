<!doctype html>
%html{"ng-app" => "fireBubbleApp"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title= current_page.data.title || "The Middleman"
        = stylesheet_link_tag "normalize", "all", "application"
    = javascript_include_tag "http://code.jquery.com/jquery-1.10.0.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js"
    = javascript_include_tag "https://cdn.firebase.com/v0/firebase.js"
    = javascript_include_tag "https://cdn.firebase.com/libs/angularfire/0.3.0/angularfire.js"

   

  %body{"ng-controller" =>"AppCtrl"}
    = yield
  = javascript_include_tag  "all"